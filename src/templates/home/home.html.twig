{% extends (home) ? 'base.html.twig' : 'empty.html.twig' %}

{% block title %}titre{% endblock %}

{% block body %}

<div id="page-top">
    <section>
        <div class="container">
            {% if home %}
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="text-uppercase section-heading">Bienvenue</h2>
                    <h3 class="text-muted section-subheading">Vous rechercher quelque chose ?</h3>
                </div>
            </div>
            {% endif %}
            {% for single in annonce %}        
            <div class="row">
                <div class="col-sm-6 col-md-4 ">
                    <a  href="/annonce/{{single.id}}" >
                        <img class="img-fluid" src="{{single.photos}}">
                    </a>
                    <div class="portfolio-caption">
                        <h4>{{(single.title)}}</h4>
                        <p class="text-muted"> A partir de :{{(single.price)}} $</p>
                        <p class="text-muted">Créée le  : {{(single.dateCreation|date("d/m/Y"))}}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
</div>

  
           
{% endblock %}
