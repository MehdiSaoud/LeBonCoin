{% extends 'base.html.twig' %}

{% block title %}Mes annonces{% endblock %}

{% block body %}
    <style>
        .portfolio-item{
            transition: all 0.3s;
        }
        .portfolio-item:hover{
            transform: scale(1.025);
        }
        .portfolio-caption h4{
            font-size: 18px;
            font-weight: bold;
        }
        .portfolio-caption p{
            line-height: 20px;
        }

    </style>
    {% if annonces is empty %}
        <h3>Vous n'avez publié aucune annonce...</h3>
    {% else %}
    <div class="row mt-5">
        {% for single in annonces %}

            <div class="col-sm-6 col-md-3 portfolio-item">
                <div class="border rounded">
                    <a href="/annonce/{{single.id}}">
                        <img class="img-fluid" src="/uploads/annonce/{{single.photos}}">
                    </a>

                    <div class="portfolio-caption text-start">
                        <h4>{{(single.title)}}</h4>
                        <p class="text-muted"> A partir de : {{(single.price)}} €</p>
                        <p class="text-muted">Créée le  : {{(single.dateCreation|date("d/m/Y"))}}</p>
                    </div>

                </div>
                <div class="d-flex">
                    {% for tag in single.tags %}
                        <h5><span class=" mx-1 badge bg-secondary">{{(tag)}}</span></h5>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}
{% endblock %}
